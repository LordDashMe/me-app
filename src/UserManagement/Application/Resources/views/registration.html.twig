{% extends '@app_common_resources/index.html.twig' %}

{% block title %} Registration | Me App {% endblock %}
{% block description %} Get started with your account. {% endblock %}

{% block stylesheets %}
    <link href="{{ asset('assets/css/user-management/registration.css') }}" rel="stylesheet">
{% endblock %}

{% block body %}
    <div id="container">
        <div class="registration-wrapper">

            {% if exception is defined %}
                <div class="alert alert-danger alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ exception }}
                </div>
            {% endif %}

            {% if message is defined %}
                <div class="alert alert-success alert-dismissible" role="alert">
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                    {{ message }}
                </div>
            {% endif %}

            <div class="panel panel-default">
                <div class="panel-heading">
                    <h1>Get started with your account</h1>
                    <div class="registration-details">
                        <p>Upon registration, your request for an account will be process by the <b>Admin</b>.</p>
                        <p>You can only allow to access the site when your account is approved.</p>
                        <p>I don't want to create an account right now, go back to <a href="{{ path('user_management_login') }}">Log In</a>.</p>
                    </div>
                </div>
                <div class="panel-body">
                    <form method="POST" action="{{ path('user_management_register_create') }}">
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                        <div class="form-group">
                            <label class="control-label">First name<span class="required">*</span></label>
                            <input 
                                type="text" 
                                id="first_name" 
                                name="first_name" 
                                class="form-control" 
                                placeholder="John" 
                                value="{{ (old['first_name'] is defined) ? old['first_name'] : '' }}"
                                required
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <label class="control-label">Last name<span class="required">*</span></label>
                            <input 
                                type="text" 
                                id="last_name" 
                                name="last_name" 
                                class="form-control" 
                                placeholder="Doe" 
                                value="{{ old['last_name'] is defined ? old['last_name'] : '' }}"
                                required
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <label class="control-label">Email<span class="required">*</span></label>
                            <input 
                                type="email" 
                                id="email" 
                                name="email" 
                                class="form-control" 
                                placeholder="john.doe@example.com" 
                                value="{{ old['email'] is defined ? old['email'] : '' }}"
                                required
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <label class="control-label">Username<span class="required">*</span></label>
                            <input 
                                type="text" 
                                id="username" 
                                name="username" 
                                class="form-control" 
                                placeholder="johndoe123" 
                                value="{{ old['username'] is defined ? old['username'] : '' }}"
                                required
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <label class="control-label">Password<span class="required">*</span></label>
                            <input 
                                type="password" 
                                id="password" 
                                name="password" 
                                class="form-control" 
                                placeholder="P@ssw0rd!"
                                required
                                autocomplete="off"
                            >
                            <p class="password-info-text">
                                <small>Password must contain a minimum of 8 characters, 1 uppercase letter, 1 lowercase letter, 1 number and 1 special character.</small>
                            </p>
                        </div>
                        <div class="form-group">
                            <label class="control-label">Confirm password<span class="required">*</span></label>
                            <input 
                                type="password" 
                                id="confirm_password" 
                                name="confirm_password" 
                                class="form-control" 
                                placeholder=""
                                required
                                autocomplete="off"
                            >
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-sm-6 col-sm-offset-3">
                                    <input type="submit" name="register-submit" id="register-submit" tabindex="4" class="form-control btn btn-primary" value="Get Started!">
                                </div>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
