{% extends '@app_bundle_resources/index.html.twig' %}

{% block title %} Me App | User login {% endblock %}

{% block body %}
<div id="wrapper">
    <div id="container">
        <div class="login-wrapper">
            <div class="panel panel-default">
                <div class="panel-heading">Tell me who you are? Give your proper credential below:</div>
                <div class="panel-body">
                    <div class="form-group">
                        <p>Username:</p>
                        <input type="text" id="username" class="form-control" placeholder="johndoe123">
                    </div>
                    <div class="form-group">
                        <p>Password:</p>
                        <input type="password" id="password" class="form-control" placeholder="********">
                    </div>
                    <div class="form-group">
                        Don't have an account yet? <a href="{{ path('user_management_register') }}">Register</a>
                    </div>
                    <div class="form-group">
                        <div class="row">
                            <div class="col-sm-6 col-sm-offset-3">
                                <input type="submit" name="login-submit" id="login-submit" tabindex="4" class="form-control btn btn-primary" value="Submit">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
	</div>
</div>
{% endblock %}
